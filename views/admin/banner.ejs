<%- include ('../layouts/adminHeader.ejs') %>
 
    <h4 style="color: white;" class="text-center my-5 ">BANNER MANAGEMENT</h4>

    <a href="/admin/add-Banners"><button type="button" class="btn btn-primary mx-3">+ Add Banners</button></a>

    <table class="table text-center">
      <thead>
        <tr style="color: white;">
          <th scope="col"><small class="text-nowrap" >SL NO</small></th>
          <th scope="col"><small class="text-nowrap" >BANNER NAME</small></th>
          <th scope="col"><small class="text-nowrap">IMAGE</small></th>
          <th scope="col"><small class="text-nowrap">DESCRIPTION</small></th>
          <th scope="col"><small class="text-nowrap">EDIT & UNLIST</small></th>
        </tr>
      </thead>
      <tbody>

        <% for(i=1;i<=banner.length;i++){ %>
          <tr>
            <td class="justify-content-center text-light">
              <%=i%>
            </td>
            <td class="justify-content-center text-light"><%=banner[i-1].name%></td>
            <td class="col-sm-3">

              <% if(banner[i-1].image) { %>
                <img src="/uploads/<%= banner[i-1].image[0] %>" width="100px" height="100px">
                <img src="/uploads/<%= banner[i-1].image[1] %>" width="100px" height="100px">
                <img src="/uploads/<%= banner[i-1].image[2] %>" width="100px" height="100px">
                <% }else{ %>
                  Image Not Found
                  <% } %>
            </td>
            <td class="col-sm-5 justify-content-center text-light"> <%=banner[i-1].description%> </td>
            <td>
              <a href="/admin/editBanner?id=<%- banner[i-1]._id %>"><button type="button"
                  class="btn btn-success">edit</button></a>
              <a id="<%-banner[i-1]._id %>" style="text-decoration: none; color: #f4e5c2;"
                href="/admin/hideBanner?id=<%- banner[i-1]._id %>">
                <% if(banner[i-1].is_active){ %><button type="button"
                  class="btn btn-danger">disable</button><%}else{%><button type="button"
                    class="btn btn-info">enable</button><%}%>
              </a>
            </td>
          </tr>
          <%}%>
      </tbody>
    </table>

    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Confirm Delete</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Are you sure want to delete ?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="save()">delete</button>
          </div>
        </div>
      </div>
    </div>

