      <div class="container">
        <div class="row">
          <div class="col-sm-3 align-items-stretch">

            <div style="background-color: #0b0c2a" class="card cart-detail mb-5">
              <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <button style="border-radius: 20px;" class="nav-link active" id="v-pills-home-tab" data-toggle="pill"
                  data-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home"
                  aria-selected="true">Profile</button>
                <button style=" border-radius: 20px;" class="nav-link" id="v-pills-profile-tab" data-toggle="pill"
                  data-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile"
                  aria-selected="false">My Orders</button>
                <button style=" border-radius: 20px;" class="nav-link" id="v-pills-messages-tab" data-toggle="pill"
                  data-target="#v-pills-messages" type="button" role="tab" aria-controls="v-pills-messages"
                  aria-selected="false">Addresses</button>
              </div>
            </div>
          </div>

          <div class="col-sm-9 ">
            <div class="tab-content align-items-stretch" id="v-pills-tabContent">
              <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                aria-labelledby="v-pills-home-tab">
                <div class="d-flex justify-content-between">
                  <div class="card"
                    style="width: 14rem;background-color: #0b0c2a;border-radius:5px; border-color: aliceblue;">
                    <div class="card-body ">
                      <h4 class="card-title" style="color:aliceblue"> Wallet Balance</h4>
                      <p class="card-text  text-light">Rs <%-userData.wallet%></p>
                    </div>  
                  </div>
                  <div class="card"
                    style="width: 14rem;background-color: #0b0c2a;border-radius:5px; border-color: aliceblue;">
                    <div class="card-body ">
                      <h4 class="card-title" style="color:aliceblue"> Cart Items</h4>
                      <p class="card-text text-light"><%-userData.cart.item.length%></p>
                    </div>
                  </div>
                  <div class="card"
                    style="width: 14rem;background-color: #0b0c2a;border-radius:5px; border-color: aliceblue;">
                    <div class="card-body ">
                      <h4 class="card-title" style="color:aliceblue"> Wishlist items</h4>
                      <p class="card-text text-light"><%-userData.wishlist.item.length%></p>
                    </div>
                  </div>
                </div>

                <div style="background-color: #0b0c2a ; border-radius: 10PX;" class="card cart-detail mt"
                  style="border-radius: 15px; background-color: rgb(255, 255, 255); border-color: aliceblue;">
                  <form action="" style="margin-left: 60px;" ; method="" id="form" onsubmit="return onSubmitFunction()">
                    <div class="mb-2 row mt-2 pt-5">
                      <input type="hidden" name="id" value="">
                      <label style="color: white;" for="staticEmail" class="col-sm-3 col-form-label">Name:</label>
                      <div class="col-sm-6">
                        <span style="font-weight: 600;color: white; font-size: larger;">
                          <%=userData.name %>
                        </span>
                      </div>
                    </div>

                    <div class="mb-3 row ">
                      <label style="color: white;" for="inputPassword" class="col-sm-3 col-form-label">Email:</label>
                      <div class="col-sm-6">
                        <span style="font-weight: 500; color: white;">
                          <%=userData.email %>
                        </span>
                      </div>
                    </div>

                    <div class="mb-3 row">
                      <label style="color: white;" for="inputPassword" class="col-sm-3 col-form-label">Mobile:</label>
                      <div class="col-sm-6">
                        <div class="input-group mb-3">
                          <span style="font-weight: 500; color: white;">
                            <%=userData.mobile %>
                          </span>
                        </div>
                      </div>
                    </div>
                    <p class="text-danger"></p>
                    <div style="margin-bottom: 2%;" class="d-flex">
                      <a style="width: 240px; background-color: rgb(255, 9, 34); color: white;" href="/editUser"
                        class="btn btn-lg mt-2 float-right"> Edit</a>
                    </div>
                    <!-- <div style="margin-bottom: 2%;" class="d-flex">
                <a style="width: 240px; background-color: rgb(255, 9, 34); color: white;" href="/forgot/forgot-p" class="btn btn-lg mt-2 float-right"> Change Password</a>
              </div> -->
                  </form>
                </div>
                <br>
              </div>
              <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab"
                style="border-radius: 15px; background-color: #0b0c2a; ">
                <section class="container mb-4">
                  <div class="table-responsive">

                    <table style="border-radius: 10px; background-color: #0b0c2a;"
                      class="table table-borderless table-hover text-center mb-0">
                      <thead class="thead-dark">
                        <tr style="color: white;">
                          <th>Your Orders</th>
                          <th>Date Purchased</th>
                          <th>Payment</th>
                          <th>Amount</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody class="align-middle">

                        <% for(let key of order){ %>

                          <tr class="text-light">
                            <td class="align-middle">
                              <% for(let product of key.products.item){ %>
                                <%= product.productId.name %> <!-- Display the name of the product -->
                                  <% } %>
                            </td>
                            <td class="align-middle ">
                              <%=key.createdAt.toDateString()%>
                            </td>
                            <td id="price" class="align-middle">
                              <%=key.payment.method%>
                            </td>
                            <td class="align-middle ">
                              <%=key.payment.amount%>
                            </td>
                            <td class="align-middle">
                              <%=key.status%>
                            </td>
                            <td class="align-middle">
                              <button class="btn-sm"
                                style="background-color: rgb(249, 4, 8); border: none; border-radius: 5px; "
                                type="submit"><a class="text-decoration-none" href="/vieworder?id=<%=key._id%>"><small
                                    style="color: rgb(255, 255, 255);"
                                    class="text-uppercase">details</small></a></button>
                            </td>
                          </tr>
                          <% }%>
                      </tbody>
                    </table>
                  </div>
                </section>
              </div>
              <div class="tab-pane fade " id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                <button type="button" style="margin-left: 2%;" class="btn btn-danger " data-toggle="modal"
                  data-target="#exampleModal">
                  Add Address
                </button>
                <!-- modal -->
                <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog"
                  aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-lg" role="document">
                    <div style="background-color: rgb(0, 0, 0); border-color: rgb(53, 53, 53);"
                      class="modal-content p-4">
                      <div class="modal-header">
                        <h5 style="color: white;" class="modal-title text-uppercase" id="exampleModalLabel">Add Address
                        </h5>
                        <button type="button"
                          style="border: none; background-color: rgb(255, 48, 48); border-radius: 4px;" class="close"
                          data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form method="post" action="/addAddress" class="colorlib-form">
                          <div class="row">

                            <!-- <label>Name *</label> -->
                            <input type="text" style="background-color: rgb(38, 38, 38);  border: none;"
                              class="form-control mb-2" name="firstname" placeholder="First name" required>

                            <!-- <label>Last Name *</label> -->
                            <input type="text" style="background-color: rgb(38, 38, 38);  border: none;"
                              class="form-control mb-2" name="lastname" placeholder="Last name" required>



                            <!-- <label>Country *</label> -->
                            <input type="text" style="background-color: rgb(38, 38, 38);  border: none;"
                              class="form-control mb-2" name="country" placeholder="Country" required>

                            <!-- <label>address *</label> -->
                            <input type="text" style="background-color: rgb(38, 38, 38);  border: none;"
                              class="form-control mb-2" placeholder="Address" name="address" required>


                            <div class="col d-flex justify-content-between">

                              <!-- <label>Town / City *</label> -->
                              <input type="text"
                                style="background-color: rgb(38, 38, 38); margin-right: 8px; margin-left: 0; border: none;"
                                class="form-control mb-2" name="city" placeholder="City" required>

                              <!-- <label>State / County *</label> -->
                              <input type="text"
                                style="background-color: rgb(38, 38, 38);  border: none; margin-right: 8px;"
                                class="form-control mb-2" name="state" placeholder="State" required>


                              <!-- <label>Postcode / ZIP *</label> -->
                              <input type="text"
                                style="background-color: rgb(38, 38, 38);  border: none; margin-right: 8px;"
                                class="form-control mb-2" name="zip" placeholder="Postcode/ZIP" required>



                              <!-- <label>Phone *</label> -->
                              <input type="tel" style="background-color: rgb(38, 38, 38); border: none;"
                                class="form-control mb-2" name="mno" placeholder="Phone" required>

                            </div>
                            <br>
                          </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                      </div>
                      </form>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <%if(userAddress.length>0){
                    for(let key of userAddress){%>
                    <div class="col-md-">
                      <div class="card cart-detail  mt-2 mb-3"
                        style="color: white; padding: 30px;border-radius: 15px; border-color: aliceblue; background-color: #0b0c2a;">
                        <span class="h5">
                          <%=key.firstname%>
                            <%=key.lastname%>
                        </span>
                        <div class="pr-2">
                          <%=key.address%>,<br>
                            <%=key.city%>,<br>
                              <%=key.state%><br>
                                <%=key.country%>
                                  <br> Pin:<%=key.zip%>,<br> Phone:<%=key.mobile%>
                                      <br><br>
                                      <a href="/editAddress?id=<%=key._id%>"><input type="button" value="Edit"
                                          class="btn btn-info btn-sm "></a>
                                      <a href="/deleteAddress?id=<%=key._id%>"><input type="button" value="Delete"
                                          class="btn btn-danger btn-sm "></a>
                        </div>
                      </div>
                    </div>
                    <%}%>
                      <%}%>
                </div>
              </div>
              <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
  </body>

