                alert('Text copied successfully!');
                Swal.fire({
                    icon: 'success',
                    title: 'Coupon copied successfully!',
                    showConfirmButton: false,
                    timer: 1000
                });

            }, () => {
                // alert('Failed to copy text');
                Swal.fire({
                    icon: 'error',
                    title: 'Failed to copy',
                    showConfirmButton: false,
                    timer: 1000
                });

            });
        };

    </script>
