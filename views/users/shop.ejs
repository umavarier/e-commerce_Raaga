                <div style="background-color: rgb(33, 33, 33); border-radius: 20px;" class=" p-4 mb-30">
                    <form style="color: white;" action="/loadShop">


                        <% for(i=0;i<category.length;i++){%>
                                    <% if (category[i].is_available==1){%>
