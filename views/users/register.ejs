    <!-- Signup Section Begin -->
    
    <section class="signup spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Sign Up</h3>
                        <% if(typeof message !=='undefined' ) { %>
                            <p class="fs-4 text-success">
                              <span style="color: rgb(230, 8, 8);">
                                <%=message %>
                              </span>
                            </p>
                            <% } %>
                        <form action="/register"  method="post" onsubmit="return validate()">
                            <div class="input__item">
                                <input type="text" placeholder="Email address" id="email" name="email" onchange="emailValidate()" />
                                <span style="color: rgb(255, 83, 31);" id="Name"></span>
                            </div>
                            <div class="input__item">
                                <input type="text" placeholder="Your Name" id="name" name="name"  onchange="nameValidate()" />
                                <span style="color: rgb(255, 83, 31);" id="Name"></span>
                            </div>
                            <div class="input__item">
                                <input type="number" placeholder="Your Phone Number" id="mno" name="mno"  onchange="numberValidate()" />
                                <span style="color: rgb(255, 83, 31);" id="Name"></span>
                            </div>
                            <div class="input__item">
                                <input type="password" placeholder="Password" name="password" id="password" onchange="passwordValidate()" />
                                <span style="color: rgb(255, 83, 31);" id="Password"></span>
                            </div>
                            <div class="input__item">
                                <input type="password" placeholder="Confirm Password" name="password2" id="password2" onchange="passwordValidate2()" />
                                <span style="color: rgb(255, 83, 31);" id="Password2"></span>
                            </div>
                            <button type="submit" class="site-btn"value="Register"
                            onclick="nameValidate() , emailValidate(), numberValidate(), passwordValidate(), passwordValidate2()">Register Now</button>
                        </form>
                        
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login__register">
                        <h3>Already have an account? </h3>
                        <a href="/login" class="primary-btn">Log In</a>
                    </div>
                </div>
               
            </div>
        </div>
    </section>
